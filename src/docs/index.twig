{% extends "layout.twig" %}

{% block page %}

    <h1 class="heading heading--1">HeroGS Examples</h1>

    <h2 class="heading heading--2">Simple 4 Columns Grid</h2>

    <div class="grid grid--gutter-30 grid--sm-4">
        <div class="grid__col">
            <div class="cell">
                <div class="cell__inner">1</div>
            </div>
        </div>
        <div class="grid__col">
            <div class="cell">
                <div class="cell__inner">2</div>
            </div>
        </div>
        <div class="grid__col">
            <div class="cell">
                <div class="cell__inner">3</div>
            </div>
        </div>
        <div class="grid__col">
            <div class="cell">
                <div class="cell__inner">4</div>
            </div>
        </div>
    </div>

    <h2 class="heading heading--3">Responsive Masonry Grid Without Javascript, CSS Flex or CSS Grid</h2>

    <div class="masonry-grid masonry-grid--gutter-30 masonry-grid--6x1 masonry-grid--xs-6x2 masonry-grid--sm-4x3 masonry-grid--md-3x4">
        <div class="masonry-grid__inner">
            <div class="masonry-grid__items">
                <div class="masonry-grid__item w-1 h-1 xs-w-2 xs-h-2 sm-w-2 sm-h-2 l-0 t-0">
                    <div class="masonry-grid__content">
                        <div class="cell">
                            <div class="cell__inner">2x2</div>
                        </div>
                    </div>
                </div>
                <div class="masonry-grid__item w-1 h-1 xs-h-3 l-0 t-1 xs-l-1 xs-t-2 sm-l-2 sm-t-0 md-l-3 md-t-0">
                    <div class="masonry-grid__content">
                        <div class="cell">
                            <div class="cell__inner">3x1</div>
                        </div>
                    </div>
                </div>
                <div class="masonry-grid__item w-1 h-1 l-0 t-2 xs-l-0 xs-t-2 sm-l-0 sm-t-2">
                    <div class="masonry-grid__content">
                        <div class="cell">
                            <div class="cell__inner">1x1</div>
                        </div>
                    </div>
                </div>
                <div class="masonry-grid__item w-1 h-1 xs-h-2 l-0 t-3 xs-l-0 xs-t-4 sm-l-1 sm-t-2 md-l-2 md-t-0">
                    <div class="masonry-grid__content">
                        <div class="cell">
                            <div class="cell__inner">2x1</div>
                        </div>
                    </div>
                </div>
                <div class="masonry-grid__item w-1 h-1 l-0 t-4 xs-l-0 xs-t-3 sm-l-0 sm-t-3 md-l-1 md-t-2">
                    <div class="masonry-grid__content">
                        <div class="cell">
                            <div class="cell__inner">1x1</div>
                        </div>
                    </div>
                </div>
                <div class="masonry-grid__item w-1 h-1 l-1 t-5 xs-l-1 xs-t-5 sm-l-2 sm-t-3 md-l-2 md-t-2">
                    <div class="masonry-grid__content">
                        <div class="cell">
                            <div class="cell__inner">1x1</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

